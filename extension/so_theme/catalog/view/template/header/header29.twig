{#=====Get variable : Config Select Block on header=====#}
{% set hidden_headercenter = soconfig.get_settings('toppanel_type') =='2'? 'hidden-compact' : '' %}
{% set hidden_headerbottom = soconfig.get_settings('toppanel_type') =='1'? 'hidden-compact' : '' %}

<header id="header" class=" variant typeheader-{{ typeheader ? typeheader : '1'}}">
	{#======	HEADER TOP	=======#}  
	<div class="header-top hidden-compact font-title">
		<div class="container">
			<div class="row">
				<div class="header-top-left col-xl-6 col-lg-6 col-md-6 col-12 hidden-sm hidden-xs">
					{% if soconfig.get_settings('welcome_message_status') %}
						<div class="welcome-msg">
							{% if soconfig.get_settings('welcome_message') is not empty %}
								{{ soconfig.decode_entities( soconfig.get_settings('welcome_message') ) }}
							{% endif %} 
						</div>
					{% endif %}	
					{% if soconfig.get_settings('phone_status') and soconfig.get_settings('contact_number') %}
					<div class="telephone">
						{{ soconfig.decode_entities( soconfig.get_settings('contact_number') ) }}
					</div>
					{% endif %}		
				</div>
				<div class="header-top-right col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12 col-12">					
					<ul class="top-log top-link">
						{% if logged %} 
							<li class="log logout"><a class="link-lg" href="{{ logout }} "> {{ text_logout }} </a></li>
						{% else %}   
							<li class="log login"><i class="icom-user1"></i><a class="link-lg" href="{{ login }} ">{{ text_login }} </a> / <a href="{{ register }}">{{ text_register }}</a></li>
											
						{% endif %} 
					</ul>
					{% if soconfig.get_settings('lang_status') %}
					<ul class="top-link list-inline lang-curr">
						{% if currency %}<li class="currency"> {{ currency }} </li> {% endif %}
						{% if language %} <li class="language">{{ language }} </li>	{% endif %}			
					</ul>				
					{% endif %}					
				</div>
			</div>
		</div>
	</div>
	
	{#======	HEADER CENTER	=======#} 
	<div class="header-middle {{hidden_headercenter}}">
		<div class="container">
			<div class="row">			
				<div class="navbar-logo col-xl-2 col-lg-2 col-md-3 col-sm-3 col-xs-4 col-4">
					<div class="logo">
				   		{{soconfig.get_logo()}}
				   	</div>
				</div>
				<div class="middle2 col-xl-10 col-lg-10 col-md-9 col-sm-9 col-xs-8 col-8">
					<div class="main-menu-w">					
						{{ content_menu1 }}	
						<div class="midde-right">
							<div class="search-header">
								<div class="icon-search"><i class="icom-search1"></i></div>								
								{{ search_block }}
								<div class="search-screen hidden-xs">&nbsp;</div>
							</div>			
							<div class="wishlist hidden-xs"><a href="{{ wishlist }}" id="" class="top-link-wishlist" title="{{ text_wishlist }} "><i class="icom-heart1"></i>{# {{ text_wishlist }} #}</a></div>	
							<div class="shopping_cart">							
							 	{{ cart }}
							</div>																	
						</div>							
					</div>																													
				</div>		
					
			</div>
		</div>
	</div>
		
</header>