{#=====Get variable : Config Select Block on header=====#}
{% set hidden_headercenter = soconfig.get_settings('toppanel_type') =='2'? 'hidden-compact' : '' %}
{% set hidden_headerbottom = soconfig.get_settings('toppanel_type') =='1'? 'hidden-compact' : '' %}

<header id="header" class=" variant typeheader-{{ typeheader ? typeheader : '1'}}">
	
	{#======	HEADER CENTER	=======#} 
	<div class="header-middle {{hidden_headercenter}}">
		<div class="container">
			<div class="row">
				<div class="middle1 col-xl-7 col-lg-9 col-md-7 col-sm-7 col-xs-12 col-12">
					<div class="menu-left">					
						{{ content_menu2 }}								
					</div>	
					<div class="main-menu-w">					
						{{ content_menu1 }}								
					</div>	
					<div class="logo">
				   		{{soconfig.get_logo()}}
				   	</div>
				</div>			
				
					
				<div class="middle2 col-xl-5 col-lg-3 col-md-5 col-sm-5 col-xs-12 col-12">
					<div class="midde-right">
						{% if soconfig.get_settings('phone_status') and soconfig.get_settings('contact_number') %}
						<div class="telephone">
							{{ soconfig.decode_entities( soconfig.get_settings('contact_number') ) }}
						</div>
						{% endif %}
						<div class="search-header">
							<div class="icon-search"><i class="icom-search1"></i></div>								
							{{ search_block }}
							<div class="search-screen hidden-xs">&nbsp;</div>
						</div>	
						<div class="account" id="my_account"><a href="{{ account }}" title="{{ text_account }}" class="btn-xs dropdown-toggle" data-bs-toggle="dropdown"><i class="icom-user1"></i></a>
							<ul class="dropdown-menu ">								
								{% if logged %} 
									<li><a href="{{ account }}">{{ text_account }}</a></li>
									<li><a href="{{ order }}">{{ text_order }}</a></li>
									<li><a class="link-lg" href="{{ logout }}" title="{{ text_logout }}">{{ text_logout }}</a></li>
								{% else %}   
									<li><a class="link-lg" href="{{ login }}" title="{{ text_login }}">{{ text_login }}</a></li>	
									<li><a href="{{ register }}">{{ text_register }}</a></li>							
								{% endif %}			
							</ul>
						</div>		
						<div class="wishlist hidden-xs"><a href="{{ wishlist }}" id="" class="top-link-wishlist" title="{{ text_wishlist }} "><i class="icom-heart1"></i>{# {{ text_wishlist }} #}</a></div>	
						<div class="shopping_cart">							
						 	{{ cart }}
						</div>																	
					</div>																													
				</div>		
					
			</div>
		</div>
	</div>
		
</header>